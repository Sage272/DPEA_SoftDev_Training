<ThirdScreen>
    BetterImageButton:
        id: change_button_s1
        size: root.btn_x, root.btn_y
        center_x: (root.width * (1/3))
        center_y: (root.height * (1/2))
        x: 100
        y: 100
        color: 1, 1, 1, 1
        source: "WhiteButtonWithBlackBorder.png"
        on_press: root.switch_screen_main()
        mouseover_color: True

    Label:
        id: change_button_text_s1
        pos_hint: {"x": -1/6}
        halign: 'center'
        font_size: change_button_s1.width/4
        text: "Screen\nOne"
        color: 0, 0, 0, 1

    BetterImageButton:
        id: change_button_s2
        size: root.btn_x, root.btn_y
        center_x: (root.width * (2/3))
        center_y: (root.height * (1/2))
        x: 100
        y: 100
        color: 1, 1, 1, 1
        source: "WhiteButtonWithBlackBorder.png"
        on_press: root.switch_screen_joystick()
        mouseover_size: True
        mouseover_color: True

    Label:
        id: change_button_text_s2
        pos_hint: {"x": 1/6}
        halign: 'center'
        font_size: change_button_s2.width/4
        # text: "Screen\nTwo"
        text: str(change_button_s2.button_id)
        color: 0, 0, 0, 1