<JoystickScreen>
    BetterImageButton:
        id: change_button_s1
        size: root.btn_x, root.btn_y
        center_x: (root.width * (1/3))
        center_y: (root.height * (1/2))
        x: 100
        y: 100
        color: 1, 1, 1, 1
        source: "WhiteButtonWithBlackBorder.png"
        on_press: root.switch_screen_main()
        mouseover_color: True

    Label:
        id: change_button_text_s1
        pos_hint: {"x": -1/6}
        halign: 'center'
        font_size: change_button_s1.width/4
        text: "Main\nScreen"
        color: 0, 0, 0, 1

    BetterImageButton:
        id: change_button_s3
        size: root.btn_x, root.btn_y
        center_x: (root.width * (2/3))
        center_y: (root.height * (1/2))
        x: 100
        y: 100
        color: 1, 1, 1, 1
        source: "WhiteButtonWithBlackBorder.png"
        on_press: root.switch_screen_third()
        mouseover_size: True
        mouseover_color: True

    Label:
        id: change_button_text_s3
        pos_hint: {"x": 1/6}
        halign: 'center'
        font_size: change_button_s3.width/4
        # text: "Screen\nThree"
        text: str(change_button_s3.button_id)
        color: 0, 0, 0, 1

    BetterImageButton:
        id: counter_button
        size: root.btn_x, root.btn_y
        center_x: (root.width * (1/2))
        center_y: (root.height * (1/2))
        color: 1, 1, 1, 1
        source: "WhiteButtonWithBlackBorder.png"
        on_press: root.counter_pressed()
        mouseover_size: True
        mouseover_color: True

    Label:
        id: counter_button_text
        halign: 'center'
        font_size: counter_button.width/4
        text: "0"
        color: 0, 0, 0, 1
        pos_hint: {"x": (0), "y": (0)}

    Label:
        id: buttons_pressed_text
        halign: 'center'
        font_size: root.btn_x/4
        text: "No Buttons Pressed"
        color: 0, 0, 0, 1
        pos_hint: {"x": (0), "y": (1/4)}

    # base code from joystick git hub, has been altered
    Label:
        id: x
        text: 'X: '
        font_size: change_button_s3.width/4
        pos_hint: {"x": 13/30, "y": 9/20}
        color: 0, 0, 0, 1

    Label:
        id: y
        text: 'Y: '
        font_size: change_button_s3.width/4
        pos_hint: {"x": -13/30, "y": 9/20}
        color: 0, 0, 0, 1

    BetterImageButton:
        id: target_icon_btn
        size: root.btn_x * (1/3), root.btn_y * (1/3)
        center_x: root.width * (1/2)
        center_y: root.height * (1/2)
        source: "Crosshair.png"
        # on_press: root.switch_screen()
